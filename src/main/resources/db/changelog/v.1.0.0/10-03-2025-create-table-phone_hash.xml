<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet logicalFilePath="10-03-2025-create-table-phone-hash"
               id="10-03-2025-create-table-phone_hash" author="v.l">
        <!-- Перевірка на існування таблиці перед створенням -->
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="phone_hash"/>
            </not>
        </preConditions>

        <createTable tableName="phone_hash">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="phone_number" type="varchar(255)"> <!-- Збільшено розмір для більшої гнучкості -->
                <constraints nullable="false"/>
            </column>
            <column name="phone_hash" type="varchar(255)"> <!-- Збільшено розмір для більшої гнучкості -->
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Індекс для phone_number -->
        <createIndex indexName="idx_phone_number" tableName="phone_hash">
            <column name="phone_number"/>
        </createIndex>

        <!-- Індекс для phone_hash -->
        <createIndex indexName="idx_phone_hash" tableName="phone_hash">
            <column name="phone_hash"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
